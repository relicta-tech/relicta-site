---
interface Props {
  caption?: string;
  takeaway?: string;
  id?: string;
}

// Generate a unique ID if none provided
const { caption, takeaway, id = `diagram-${Math.random().toString(36).substr(2, 9)}` } = Astro.props;
---

<figure class="diagram-card" id={id}>
  <div class="diagram-header">
    <div class="diagram-actions">
      <button class="btn-icon zoom-btn" aria-label="Expand diagram">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7"/>
        </svg>
      </button>
    </div>
  </div>
  <div class="diagram-content">
    <slot />
  </div>
  {(caption || takeaway) && (
    <figcaption class="diagram-footer">
      {caption && <div class="diagram-caption">{caption}</div>}
      {takeaway && (
        <div class="diagram-takeaway">
          <strong>Key Takeaway:</strong> {takeaway}
        </div>
      )}
    </figcaption>
  )}
</figure>

<script define:vars={{ id }}>
  const card = document.getElementById(id);
  const btn = card?.querySelector('.zoom-btn');
  const content = card?.querySelector('.diagram-content');

  if (btn && content) {
    btn.addEventListener('click', () => {
      // Pass the inner HTML (the SVG) to the global modal
      if (window.openDiagramModal) {
        window.openDiagramModal(content.innerHTML);
      }
    });
  }
</script>

<style>
  .diagram-card {
    background: #080b16;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    margin: 40px 0;
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    position: relative;
  }

  .diagram-header {
    position: absolute;
    top: 12px;
    right: 12px;
    z-index: 5;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .diagram-card:hover .diagram-header {
    opacity: 1;
  }

  .btn-icon {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid var(--color-border);
    color: var(--color-muted);
    width: 32px;
    height: 32px;
    border-radius: 6px;
    display: grid;
    place-items: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-icon:hover {
    background: rgba(255, 255, 255, 0.2);
    color: var(--color-text);
  }

  .diagram-content {
    padding: 32px;
    display: flex;
    justify-content: center;
    background: radial-gradient(circle at center, rgba(92, 240, 200, 0.03), transparent 70%);
  }

  /* Target the mermaid SVG specifically if it's inside */
  .diagram-content :global(svg) {
    max-width: 100%;
    height: auto;
  }

  .diagram-footer {
    padding: 16px 24px;
    border-top: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.02);
    font-size: 0.95rem;
  }

  .diagram-caption {
    color: var(--color-muted);
    font-weight: 500;
    margin-bottom: 8px;
  }

  .diagram-takeaway {
    color: var(--color-text);
    background: rgba(92, 240, 200, 0.1);
    border-left: 2px solid var(--color-accent);
    padding: 8px 12px;
    border-radius: 4px;
    margin-top: 12px;
  }

  .diagram-takeaway strong {
    color: var(--color-accent);
  }
</style>