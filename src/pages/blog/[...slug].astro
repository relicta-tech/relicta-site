---
import { getCollection } from 'astro:content';
import SiteLayout from '../../layouts/SiteLayout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content, headings } = await post.render();

// Filter for h2 and h3 for the TOC
const toc = headings.filter((h) => h.depth > 1 && h.depth < 4);
---

<SiteLayout title={post.data.title} description={post.data.description}>
    <article class="blog-post-container">
        <!-- Hero Header -->
        <header class="post-hero">
            <div class="hero-content">
                <div class="post-meta">
                    <span class="publish-date">{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                    <span class="separator">/</span>
                    <span class="author-name">By {post.data.author}</span>
                </div>
                <h1 class="post-title">{post.data.title}</h1>
                <p class="post-lede">{post.data.description}</p>
                <div class="post-tags">
                    {post.data.tags.map((tag) => (
                        <span class="tag">#{tag}</span>
                    ))}
                </div>
            </div>
        </header>

        <div class="post-body-wrapper">
            <!-- Sidebar / TOC -->
            <aside class="post-sidebar">
                <div class="sticky-toc">
                    <div class="toc-header">Table of Contents</div>
                    <nav class="toc-nav">
                        <ul>
                            {toc.map((heading) => (
                                <li class={`toc-item depth-${heading.depth}`}>
                                    <a href={`#${heading.slug}`}>{heading.text}</a>
                                </li>
                            ))}
                        </ul>
                    </nav>
                    <div class="sidebar-divider"></div>
                    <div class="sidebar-share">
                        <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=https://relicta.tech/blog/${post.slug}`} target="_blank" rel="noopener" class="share-link">
                            Share on X
                        </a>
                    </div>
                </div>
            </aside>

            <!-- Main Content -->
            <div class="post-content">
                <Content />
            </div>
        </div>
    </article>
</SiteLayout>

<style is:global>
    .blog-post-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 24px 120px;
    }

    /* Hero Styling */
    .post-hero {
        padding: 80px 0 60px;
        text-align: center;
        max-width: 900px;
        margin: 0 auto;
        position: relative;
    }

    /* Subtle background glow for hero */
    .post-hero::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        background: radial-gradient(closest-side, rgba(92, 240, 200, 0.08), transparent);
        pointer-events: none;
        z-index: -1;
    }

    .post-meta {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: var(--color-accent);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .post-meta .separator {
        color: var(--color-border);
    }

    .post-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        line-height: 1.1;
        letter-spacing: -0.03em;
        margin: 0 0 24px;
        background: linear-gradient(180deg, var(--color-text) 0%, #a0aec0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .post-lede {
        font-size: 1.35rem;
        line-height: 1.6;
        color: var(--color-muted);
        margin: 0 auto 32px;
        max-width: 720px;
    }

    .post-tags {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 8px;
    }

    .tag {
        font-family: var(--font-mono);
        font-size: 0.8rem;
        color: var(--color-muted);
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--color-border);
        padding: 4px 10px;
        border-radius: 4px;
    }

    /* Layout: Sidebar + Content */
    .post-body-wrapper {
        display: grid;
        grid-template-columns: 260px 1fr;
        gap: 80px;
        margin-top: 40px;
        align-items: start;
        max-width: 1100px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Sidebar / TOC */
    .sticky-toc {
        position: sticky;
        top: 120px;
        padding-right: 20px;
    }

    .toc-header {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-weight: 700;
        color: var(--color-text);
        margin-bottom: 16px;
        opacity: 0.7;
    }

    .toc-nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .toc-nav a {
        font-size: 0.9rem;
        color: var(--color-muted);
        line-height: 1.4;
        transition: color 0.2s ease;
        display: block;
        text-decoration: none;
    }

    .toc-nav a:hover {
        color: var(--color-accent);
    }

    .toc-item.depth-3 {
        padding-left: 12px;
        border-left: 1px solid var(--color-border);
    }

    .sidebar-divider {
        height: 1px;
        background: var(--color-border);
        margin: 24px 0;
        width: 40px;
    }

    .share-link {
        font-size: 0.85rem;
        color: var(--color-muted);
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .share-link:hover {
        color: var(--color-text);
        text-decoration: underline;
    }

    /* Main Content Typography */
    .post-content {
        font-size: 1.125rem;
        line-height: 1.75;
        color: var(--color-muted);
        max-width: 720px; /* Optimal reading width */
        min-width: 0; /* Prevent overflow */
    }

    .post-content h2 {
        font-size: 1.75rem;
        color: var(--color-text);
        margin: 56px 0 24px;
        letter-spacing: -0.02em;
        scroll-margin-top: 100px;
    }

    .post-content h3 {
        font-size: 1.35rem;
        color: var(--color-text);
        margin: 40px 0 16px;
        scroll-margin-top: 100px;
    }

    .post-content p {
        margin-bottom: 28px;
    }

    .post-content ul, .post-content ol {
        margin-bottom: 28px;
        padding-left: 20px;
    }

    .post-content li {
        margin-bottom: 10px;
        padding-left: 8px;
    }

    .post-content li::marker {
        color: var(--color-accent);
    }

    /* Distinctive Blockquotes */
    .post-content blockquote {
        margin: 40px 0;
        padding: 0 0 0 24px;
        border-left: 3px solid var(--color-accent);
        font-style: italic;
        color: var(--color-text);
        font-size: 1.25rem;
        line-height: 1.6;
    }
    
    .post-content blockquote p {
        margin-bottom: 0;
    }

    /* Code Blocks & Mermaid */
    .post-content pre, .mermaid {
        background: #080b16 !important; /* Darker than bg */
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        padding: 24px;
        margin: 40px 0;
        overflow-x: auto;
        box-shadow: inset 0 0 20px rgba(0,0,0,0.2);
    }

    .mermaid {
        display: flex;
        justify-content: center;
        background: rgba(255, 255, 255, 0.02) !important;
    }

    /* Inline Code */
    .post-content code {
        font-family: var(--font-mono);
        font-size: 0.9em;
        color: var(--color-accent-text); /* Ensure contrast */
        background: rgba(255, 255, 255, 0.06);
        padding: 2px 6px;
        border-radius: 4px;
    }
    
    .post-content pre code {
        background: transparent;
        padding: 0;
        color: inherit;
    }

    /* Horizontal Rule */
    .post-content hr {
        border: 0;
        height: 1px;
        background: var(--color-border);
        margin: 60px 0;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .post-body-wrapper {
            grid-template-columns: 1fr;
            gap: 0;
        }

        .post-sidebar {
            display: none; /* Hide sidebar on mobile/tablet for focus */
        }
        
        .post-content {
            max-width: 100%;
        }
    }
    
    @media (max-width: 640px) {
        .post-hero {
            padding: 40px 0;
        }
        
        .post-title {
            font-size: 2rem;
        }
        
        .post-lede {
            font-size: 1.1rem;
        }
        
        .blog-post-container {
            padding: 0 20px 60px;
        }
    }
</style>
