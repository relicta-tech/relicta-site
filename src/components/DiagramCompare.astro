---
interface Props {
  caption?: string;
  labels?: [string, string]; // ["Before", "After"]
}

const { caption, labels = ["Before", "After"] } = Astro.props;
---

<div class="diagram-compare">
  <div class="compare-container">
    <!-- Slot 1: Before -->
    <div class="compare-item item-before">
      <div class="compare-label">{labels[0]}</div>
      <div class="content-wrapper">
        <slot name="before" />
      </div>
    </div>

    <!-- Divider -->
    <div class="compare-divider">
        <div class="arrow-icon">â†’</div>
    </div>

    <!-- Slot 2: After -->
    <div class="compare-item item-after">
      <div class="compare-label">{labels[1]}</div>
      <div class="content-wrapper">
        <slot name="after" />
      </div>
    </div>
  </div>
  
  {caption && <div class="compare-caption">{caption}</div>}
</div>

<style>
  .diagram-compare {
    margin: 40px 0;
    width: 100%;
  }

  .compare-container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 0;
    background: #080b16;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .compare-item {
    position: relative;
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .item-before {
    background: rgba(255, 0, 0, 0.02);
  }

  .item-after {
    background: rgba(92, 240, 200, 0.02);
  }

  .compare-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 700;
    color: var(--color-muted);
    margin-bottom: 16px;
    padding: 4px 8px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  .content-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  /* Make SVGs fit */
  .content-wrapper :global(svg) {
    max-width: 100%;
    height: auto;
  }

  .compare-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    background: var(--color-surface);
    border-left: 1px solid var(--color-border);
    border-right: 1px solid var(--color-border);
    z-index: 1;
  }

  .arrow-icon {
    width: 24px;
    height: 24px;
    background: var(--color-accent);
    color: #000;
    border-radius: 50%;
    display: grid;
    place-items: center;
    font-weight: bold;
    font-size: 14px;
  }

  .compare-caption {
    margin-top: 12px;
    text-align: center;
    font-size: 0.9rem;
    color: var(--color-muted);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .compare-container {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto;
    }
    
    .compare-divider {
      width: 100%;
      height: 40px;
      border-left: none;
      border-right: none;
      border-top: 1px solid var(--color-border);
      border-bottom: 1px solid var(--color-border);
    }

    .arrow-icon {
        transform: rotate(90deg);
    }
  }
</style>
