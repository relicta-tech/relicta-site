<header class="top-bar">
  <div class="brand">
    <a href="/" aria-label="Home">
      <div class="brand-logos">
        <img src="/brand/relicta-logo-light.svg" alt="Relicta" class="brand-mark logo-light" />
        <img src="/brand/relicta-logo-dark.svg" alt="Relicta" class="brand-mark logo-dark" />
      </div>
    </a>
  </div>
  <button class="menu-toggle" type="button" aria-label="Toggle navigation menu" aria-expanded="false" data-menu-toggle>
    <span class="menu-icon"></span>
  </button>
  <nav class="nav" id="main-nav">
    <a href="/vision">Vision</a>
    <a href="/product">Product</a>
    <a href="https://docs.relicta.tech" target="_blank" rel="noopener">Docs</a>
    <a href="https://github.com/relicta-tech/relicta" target="_blank" rel="noopener" aria-label="GitHub" class="icon-link">
      <svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
    </a>
  </nav>
  <div class="cta">
    <button class="theme-toggle" type="button" data-theme-toggle aria-pressed="false">Toggle theme</button>
  </div>
</header>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.querySelector('[data-menu-toggle]');
    const nav = document.getElementById('main-nav');
    const cta = document.querySelector('.top-bar .cta');

    if (!toggle || !nav) return;

    const closeMenu = () => {
      toggle.setAttribute('aria-expanded', 'false');
      nav.classList.remove('nav-open');
      if (cta) cta.classList.remove('cta-open');
      document.body.classList.remove('menu-open');
    };

    toggle.addEventListener('click', () => {
      const isOpen = toggle.getAttribute('aria-expanded') === 'true';
      if (isOpen) {
        closeMenu();
      } else {
        toggle.setAttribute('aria-expanded', 'true');
        nav.classList.add('nav-open');
        if (cta) cta.classList.add('cta-open');
        document.body.classList.add('menu-open');
      }
    });

    const navLinks = nav.querySelectorAll('a');
    navLinks.forEach((link) => {
      link.addEventListener('click', () => {
        closeMenu();
      });
    });
  });
</script>
<style>
  .icon-link {
    display: flex;
    align-items: center;
  }
</style>
