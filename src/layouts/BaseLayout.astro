---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Relicta â€” AI-powered release management",
  description = "Relicta automates semantic versioning, release notes, approvals, and publishing with a friendly CLI and GitHub Action."
} = Astro.props as Props;

const toggleScript = `(() => {
  const init = () => {
    const root = document.documentElement;
    const toggle = document.querySelector('[data-theme-toggle]');
    const preferred = localStorage.getItem('theme');
    const systemPrefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
    const initial = preferred || (systemPrefersLight ? 'light' : 'dark');
    root.dataset.theme = initial;
    if (!toggle) return;
    toggle.textContent = initial === 'light' ? 'Dark mode' : 'Light mode';
    toggle.setAttribute('aria-pressed', initial === 'light' ? 'false' : 'true');
    toggle.addEventListener('click', () => {
      const next = root.dataset.theme === 'light' ? 'dark' : 'light';
      root.dataset.theme = next;
      localStorage.setItem('theme', next);
      toggle.textContent = next === 'light' ? 'Dark mode' : 'Light mode';
      toggle.setAttribute('aria-pressed', next === 'light' ? 'false' : 'true');
    });
  };
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init, { once: true });
  } else {
    init();
  }
})();`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <script is:inline set:html={toggleScript}></script>
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to main content</a>
    <div class="page-bg">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>
    </div>
    <slot />
  </body>
</html>
