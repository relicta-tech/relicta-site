<style>
  .footer {
    display: block; /* Override flex from global if needed */
  }
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 40px;
    width: 100%;
    max-width: var(--content-max);
    margin: 0 auto;
  }
  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .footer-col h4 {
    color: var(--color-text);
    margin-bottom: 4px;
    font-size: 1rem;
  }
  .footer-col a {
    color: var(--color-muted);
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }
  .footer-col a:hover {
    color: var(--color-accent);
  }
  .brand-col .copyright {
    color: var(--color-muted);
    font-size: 0.9rem;
    margin-top: 12px;
  }
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 32px;
    }
    .brand-col {
      grid-column: 1 / -1;
      margin-bottom: 16px;
    }
  }
  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
